# HUGGINGFACE CONFIG 
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=your_huggingface_token_here

# DATABASE CONFIG
POSTGRES_USER=gateway_user
POSTGRES_PASSWORD=gateway_password
POSTGRES_DB=llm_gateway
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# REDIS CONFIG 
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

#  BACKEND CONFIG 
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=2  # Reduce to 1 if low memory
ENVIRONMENT=development

#  FRONTEND CONFIG 
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

#  RATE LIMITING 
RATE_LIMIT_PER_MINUTE=30  # HuggingFace free tier limit
MAX_TOKENS_PER_REQUEST=1024

#  LOCAL MODELS CONFIG 
# Adjust based on your available RAM (16GB total)
LOCAL_MODEL_MEMORY_LIMIT=8000  # MB reserved for local models
LOCAL_MODEL_QUANTIZATION=4  # 4-bit quantization
LOCAL_MODEL_THREADS=4  # CPU threads for inference

#  CACHE CONFIG 
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour
SEMANTIC_CACHE_THRESHOLD=0.85  # Similarity threshold

#  MONITORING 
LOG_LEVEL=INFO
METRICS_ENABLED=true